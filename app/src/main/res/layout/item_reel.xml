<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_episode"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"

            >

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/black"

                />

            <FrameLayout
                android:id="@+id/fl_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@color/black">


                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_arrow_left"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_24sdp"
                    app:tint="@color/whiteMy" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_22sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_5sdp"

                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:paddingEnd="@dimen/_5sdp"

                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:orientation="horizontal"

                                >

                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    app:cardCornerRadius="@dimen/_3sdp"
                                    app:cardElevation="@dimen/_5sdp">
                                    <!-- Thumbnail Image -->
                                    <ImageView
                                        android:id="@+id/thumbnail"
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_40sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/background_image" />
                                </androidx.cardview.widget.CardView>


                                <!-- Content Section -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingStart="@dimen/_8sdp"
                                    android:paddingEnd="@dimen/_8sdp">

                                    <!-- Title -->
                                    <TextView
                                        android:id="@+id/title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:maxLines="2"
                                        android:ellipsize="end"
                                        tools:text="The Billionaire’s VirginThe Billionaire’s VirginThe Billionaire’s Virgin "
                                        android:textColor="@color/whiteMy"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold" />

                                    <!-- Category Label -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:gravity="center_vertical"
                                        >

                                        <TextView
                                            android:id="@+id/category"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Love Triangle"
                                            android:textColor="#FFD700"
                                            android:textSize="@dimen/_10ssp" />

                                        <TextView
                                            android:id="@+id/textViews"
                                            android:visibility="gone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/ic_btn"
                                            android:drawableStart="@drawable/eye2"
                                            android:layout_marginStart="@dimen/_10sdp"
                                            android:drawablePadding="@dimen/_3sdp"
                                            android:drawableTint="@color/whiteMy"
                                            android:textColor="@color/whiteMy"
                                            android:gravity="bottom"
                                            android:textSize="@dimen/_10ssp"
                                            tools:text="49.6M Views" />

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>
                            <!-- Description -->

                            <TextView
                                android:id="@+id/description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="WHAT HAPPENS WHEN A STUDENT SURROGATE PROPOSES TO HER CLI ... Expand"
                                android:textColor="@color/whiteMy"
                                android:textSize="@dimen/_12ssp" />

                            <TextView
                                android:id="@+id/btnWatchNow"
                                style="@style/BodyXSmallRegular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:background="@drawable/ic_btn_color_shadow"
                                android:paddingHorizontal="@dimen/_10sdp"
                                android:paddingVertical="@dimen/_10sdp"
                                android:text="Watch Now"
                                android:textAlignment="center"
                                android:textColor="@color/whiteMy"
                                android:textSize="@dimen/_14sdp"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"

                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical"
                                android:paddingVertical="@dimen/_5sdp">

                                <ImageView
                                    android:id="@+id/img_like"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/ic_like"
                                    android:tint="@android:color/white"

                                    tools:ignore="UseAppTint" />

                                <TextView
                                    android:id="@+id/text_like"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="274.0K"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"

                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/favourite"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/ic_favourite" />

                                <TextView
                                    android:id="@+id/text_favourite"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="274.0K"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"

                                    />

                            </LinearLayout>



                            <!--                <ImageView-->
                            <!--                    android:id="@+id/comment_icon"-->
                            <!--                    android:layout_width="30dp"-->
                            <!--                    android:layout_height="30dp"-->
                            <!--                    android:layout_marginTop="16dp"-->
                            <!--                    android:src="@drawable/ic_chat_bubble"-->
                            <!--                    android:tint="@android:color/white" />-->

                            <ImageView
                                android:id="@+id/img_share"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:contentDescription="@null"
                                android:paddingVertical="@dimen/_5sdp"
                                android:src="@drawable/ic_share"
                                app:tint="@android:color/white" />

<!--                            <ImageView-->
<!--                                android:id="@+id/img_more"-->
<!--                                android:layout_width="@dimen/_30sdp"-->
<!--                                android:layout_height="@dimen/_30sdp"-->
<!--                                android:src="@drawable/ic_more"-->
<!--                                app:tint="@android:color/white" />-->

                            <ImageView
                                android:id="@+id/volumeIcon"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_volume_on"
                                app:tint="@android:color/white" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <ImageView
                    android:id="@+id/playPauseIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/ic_play" />


            </FrameLayout>


            <SeekBar
                android:id="@+id/video_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:layout_gravity="center|bottom"
                android:background="@android:color/transparent"
                android:paddingHorizontal="0dp"
                android:paddingVertical="@dimen/_10sdp"
                android:progress="10"
                android:progressDrawable="@drawable/custom_progress_bar"
                android:thumb="@drawable/custom_thumb"
                />

            <!--            <SeekBar-->
            <!--                android:id="@+id/video_progress"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/_3sdp"-->
            <!--                android:layout_gravity="center|bottom"-->
            <!--                android:background="@android:color/transparent"-->
            <!--                android:progressTint="@color/whiteMy"-->
            <!--                android:thumbTint="@color/whiteLight2"-->
            <!--                android:thumb="@null"-->
            <!--                android:progress="10"-->
            <!--                android:progressDrawable="@drawable/custom_progress_bar"-->
            <!--                android:padding="0dp"-->
            <!--                />-->
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_episode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"

            android:background="@drawable/radius10"
            android:backgroundTint="#111111"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">


            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_play_list"
                app:tint="@color/whiteMy" />

            <TextView
                android:id="@+id/play_cur"
                style="@style/BodySmallMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="EP.1"
                android:textColor="@color/whiteMy"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/play_total"
                style="@style/BodySmallMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/EP.50"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#AAAAAA" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>