<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_image_sigh_in" />
    <!-- Replace with your background image -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A8050505"

        >

        <!-- Logo -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_24sdp"

            android:src="@drawable/ic_arrow_left"
            app:tint="@color/whiteMy"

            />


        <!-- Logo and Welcome Text -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Logo -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher" /> <!-- Replace with your logo drawable -->

            <!-- Welcome Text -->

            <TextView
                style="@style/BodyLargeBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_18ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingHorizontal="@dimen/_30sdp"
                android:text="Get instant access to latest and most popular drama series and shorts, all in one place."
                android:textAlignment="center"
                android:textColor="@color/whiteLight"
                android:textSize="@dimen/_12ssp"

                />
        </LinearLayout>


        <!-- Social Login Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fBSignInButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/radius10"
                android:backgroundTint="#1877F2"
                android:drawableStart="@drawable/ic_fb"
                android:drawablePadding="8dp"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Sign in with Facebook"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/googleSignInButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_google_shadow"
                android:drawableStart="@drawable/ic_google"
                android:drawablePadding="8dp"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:text="Sign in with Google    "
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>