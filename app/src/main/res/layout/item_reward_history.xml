<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/episode_background"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/name"
                style="@style/BodyLargeBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Check-in"
                android:textColor="@color/whiteMy"

                />

            <TextView
                android:id="@+id/coin"
                style="@style/BodyLargeBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"

                android:paddingBottom="@dimen/_5sdp"
                android:text="+10"
                android:textAlignment="textEnd"
                android:textColor="@color/whiteMy"
                android:textSize="@dimen/_14ssp"
                app:drawableEndCompat="@drawable/ic_coin"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                style="@style/BodyLargeBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:text="15-june-2025"
                android:textColor="@color/gray"
                android:textSize="@dimen/_10ssp"

                />


            <TextView
                android:id="@+id/expires"
                style="@style/BodyLargeBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:text="expires on 15 jun 2025"
                android:textAlignment="textEnd"
                android:textColor="@color/Red"
                android:textSize="@dimen/_10ssp"


                />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

