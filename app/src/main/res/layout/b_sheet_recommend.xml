<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/shap_rectangle_top"


        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/cl_rating_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/headingTitle"
                    style="@style/BodySmallMedium"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recommended For You"
                    android:textAlignment="center"
                    android:textColor="@color/whiteMy"
                    android:textSize="@dimen/_12ssp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingStart="@dimen/_30sdp"

                    />

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_close"
                    app:tint="@color/whiteMy"
                    android:padding="@dimen/_10sdp"
                    />
            </LinearLayout>


            <!--            <androidx.viewpager2.widget.ViewPager2-->
            <!--                android:id="@+id/pager"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent" />-->

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    style="@style/BodyLargeBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/_4sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:text="@string/app_name"
                    android:textAlignment="center"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/whiteMy"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tag1"
                        style="@style/BodyXSmallRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@drawable/ic_btn"
                        android:backgroundTint="#36FFFFFF"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="TAG 1"

                        android:textColor="@color/whiteMy" />

                    <TextView
                        android:id="@+id/tag2"
                        style="@style/BodyXSmallRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@drawable/ic_btn"
                        android:backgroundTint="#36FFFFFF"
                        android:paddingHorizontal="@dimen/_30sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="TAG 1"
                        android:textColor="@color/whiteMy" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/btnWatchMyList"
                        style="@style/BodyXSmallRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@drawable/ic_btn"
                        android:backgroundTint="#36FFFFFF"
                        android:drawableStart="@drawable/ic_favourite"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="Add to My List"
                        android:textAlignment="center"
                        android:textColor="@color/whiteMy"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/btnWatchNow"
                        style="@style/BodyXSmallRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@drawable/ic_btn"
                        android:backgroundTint="@color/Red"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:text="Watch Now"
                        android:textAlignment="center"
                        android:textColor="@color/whiteMy"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

