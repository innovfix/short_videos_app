<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/_10sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"


        >


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_80sdp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_3sdp"
            app:cardElevation="@dimen/_5sdp"
            app:cardPreventCornerOverlap="true">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/background_image" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:layout_margin="0dp"
                android:indeterminate="false"
                android:max="100"
                android:padding="0dp"
                android:progress="50"
                android:layout_gravity="bottom"
                android:progressTint="@color/Red"
                android:progressDrawable="@drawable/custom_progress_bar"
                />
        </androidx.cardview.widget.CardView>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/_8sdp">

            <TextView
                android:id="@+id/title"
                style="@style/BodyLargeSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="The Billionaire’s Virgin The Billionaire’s Virgin The Billionaire’s Virgin The Billionaire’s Virgin "
                android:textColor="@color/whiteMy"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/last_episode"
                    style="@style/BodySmallMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EP.1"
                    android:textColor="@color/Red"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/total_episode"
                    style="@style/BodySmallMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="/EP.50"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_12ssp" />
            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/selected"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            />

<!--        <ImageView-->
<!--            android:id="@+id/isFav"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:paddingStart="@dimen/_5sdp"-->
<!--            android:src="@drawable/ic_favourite" />-->

    </LinearLayout>
</RelativeLayout>

