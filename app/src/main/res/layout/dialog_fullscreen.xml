<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#99000000">

    <!-- Your dialog content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch ad to unlock for free"
            android:textColor="@color/whiteMy"
            android:paddingVertical="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:id="@+id/imagePoster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                tools:maxHeight="@dimen/_150sdp"
                tools:src="@drawable/bg"
                />
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/llBtnWatchAd"
            android:background="@drawable/btn_enabled_disabled"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ads"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableTint="@color/whiteMy"
            android:text="Watch Ad"
            android:textAlignment="center"
            android:textColor="@color/whiteMy"
            android:textSize="@dimen/_14ssp"
            android:layout_marginTop="@dimen/_10sdp"

            />

        <TextView
            android:id="@+id/today_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Watched today(0/5)"
            android:textAlignment="center"
            android:textColor="@color/whiteLight"
            android:textSize="@dimen/_12ssp"
            />



        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_close_round"
            app:tint="@color/whiteMy"
            android:padding="@dimen/_10sdp"

            />

    </LinearLayout>
</FrameLayout>