<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#00FF0000"
                android:centerX="0.9"
                android:endColor="#1AFFFFFF"
                android:startColor="#00FF0000" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#00FF0000"
                android:centerX="0.9"
                android:endColor="#1AFFFFFF"
                android:startColor="#00FF0000" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#19000000"
                android:centerY="0.2"
                android:endColor="#00E9E9E9"
                android:startColor="#1AFFFFFF" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>

    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerY="0.2"
                android:endColor="#00FF0000"
                android:centerColor="#0DFFFFFF"
                android:startColor="#1AFFFFFF" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>

</layer-list>