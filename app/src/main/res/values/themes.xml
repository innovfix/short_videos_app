<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ReelShort" parent="Theme.Material3.Dark.NoActionBar">

        <item name="android:windowBackground">@color/bg_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

<!--         Status bar color. -->
        <item name="android:statusBarColor">@color/bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/ginto_normal_regular</item>

        <item name="colorOnSurfaceVariant">@color/colorAccent</item>
        <item name="android:colorPrimaryDark">@color/bg_color</item>
        <item name="colorSurface">@color/bg_color</item>

        <item name="toolbarStyle">@style/MDCToolbar</item>
        <item name="colorSurfaceContainer">@color/bg_color</item>
    </style>


    <!-- Toolbar style on both light and night mode -->
    <style name="MDCToolbar" parent="Widget.Material3.Toolbar.Surface" tools:keep="@style/MDCToolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MDC.Toolbar</item>
    </style>

    <style name="ThemeOverlay.MDC.Toolbar" parent="" tools:keep="@style/ThemeOverlay_MDC_Toolbar">
        <!-- Background color -->
        <item name="colorSurface">@color/bg_color</item>
        <!-- Title and Navigation icon color -->
        <item name="colorOnSurface">@color/bg_color</item>
        <!-- Subtitle and Action item color -->
        <item name="colorOnSurfaceVariant">@color/orange</item>
    </style>


    <style name="CustomDialog95Percent" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item> <!-- Adjust for dim effect -->
    </style>

    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>


    <style name="MyTransparentBottomSheetDialogTheme2" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>


    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>




    <style name="spinner" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/whiteMy</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ginto_normal_regular</item>
    </style>
    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>
        <item name="indicatorName">BallPulseIndicator</item>
    </style>











    <!--     Regular -->

    <style name="BodySmallRegular" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ginto_normal_regular</item>
    </style>

    <style name="BodyXSmallRegular" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ginto_normal_regular</item>
    </style>


    <!--     Medium -->

    <style name="BodyMediumMedium" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ginto_normal_medium</item>
    </style>

    <style name="BodySmallMedium" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ginto_normal_medium</item>
    </style>
    <style name="BodyLargeMedium" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ginto_normal_medium</item>
    </style>


        <!--     Bold -->
    <style name="BodyLargeSemiBold" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ginto_normal_semi_bold</item>
    </style>

    <style name="BodyLargeBold" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ginto_normal_bold</item>
    </style>

    <style name="BodySmallSemiBold" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/ginto_normal_semi_bold</item>
    </style>


    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/orangeLight</item>
        <item name="shapeAppearance">@style/YourIndicatorShape</item>
<!--        <item name="android:shapeAppearance">@style/YourIndicatorShape</item>-->
    </style>

    <!-- Optional: Custom shape for the indicator -->
    <style name="YourIndicatorShape" parent="ShapeAppearance.Material3.SmallComponent">
        <!-- Customize shape corners if needed -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>