<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/light_green</item>
        <item name="cardCornerRadius">25dp</item>
    </style>

    <style name="CardViewStyle.Spacing" parent="CardViewStyle">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/_2sdp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="EditTextStyleMultiLine">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>